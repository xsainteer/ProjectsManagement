@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Database.Models.Project

<h2>Шаг 1: Основная информация о проекте</h2>

<form asp-action="Step1" method="post">
    <div>
        <label asp-for="Name">Название проекта</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label asp-for="StartDate">Дата начала</label>
        <input asp-for="StartDate" type="date" />
    </div>
    <div>
        <label asp-for="EndDate">Дата окончания</label>
        <input asp-for="EndDate" type="date" />
    </div>
    <div>
        <label asp-for="Priority">Приоритет</label>
        <input asp-for="Priority" />
    </div>
    <button type="submit">Далее</button>
</form>